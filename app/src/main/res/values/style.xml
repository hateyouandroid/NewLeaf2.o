<resources>
    <!-- Base application theme. -->
    <style name="Theme.SynnefoIMS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_bg_color</item>
        <item name="colorPrimaryVariant">@color/ap_gray</item>
        <item name="colorOnPrimary">@color/ap_gray</item>
        <item name="colorShadowLight">@color/white</item>
        <item name="colorShadowDark">#d9dbde</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="NeumophoCard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/dimen17</item>
    </style>
    <style name="NeumophoActive" parent="Base.V21.Theme.Neumorph">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="strokeColor">@color/Light_purpal</item>
        <item name="neumorph_cornerSize">@dimen/dimen7</item>
    </style>
</resources>