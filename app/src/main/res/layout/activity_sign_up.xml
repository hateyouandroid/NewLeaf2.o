<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.SignUpActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Create an account to use all the features"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:src="@drawable/ic_access_account" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginEnd="@dimen/dimen20"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen5"
            android:drawablePadding="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5"
            android:paddingEnd="@dimen/dimen5"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_profile"
                android:drawablePadding="@dimen/dimen10"
                android:ems="8"
                android:hint="@string/tv_username"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/dimen10" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen20"
            android:layout_marginBottom="@dimen/dimen5"
            android:drawablePadding="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5"
            android:paddingEnd="@dimen/dimen5"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="@dimen/dimen10"
                android:ems="8"
                android:hint="Mail Id"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/dimen10" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5"
            android:paddingEnd="@dimen/dimen5"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_contact"
                android:drawablePadding="@dimen/dimen10"
                android:ems="8"
                android:hint="Mobile No"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/dimen10" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginEnd="@dimen/dimen20"
        android:weightSum="2">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5"
            android:paddingEnd="@dimen/dimen5"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimen10"
                android:gravity="center"
                android:hint="OTP"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/dimen10" />
        </com.google.android.material.textfield.TextInputLayout>

        <soup.neumorphism.NeumorphButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/genrate_otp"
            android:padding="@dimen/dimen25"
            android:clickable="true"
            android:text="Submit OTP"
            android:textColor="@color/white"
            app:neumorph_backgroundColor="@color/view_bg"
            app:neumorph_shapeAppearance="@style/NeumophoCard"
            app:neumorph_shapeType="flat" />



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_marginEnd="@dimen/dimen20"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5"
            android:paddingEnd="@dimen/dimen5"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="@dimen/dimen10"
                android:ems="8"
                android:hint="Password"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/dimen10" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen5"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen5"
            android:paddingStart="@dimen/dimen5"
            android:paddingEnd="@dimen/dimen5"
            app:boxBackgroundMode="outline"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_conformpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="@dimen/dimen10"
                android:ems="8"
                android:hint="Conform Password"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/dimen10" />

        </com.google.android.material.textfield.TextInputLayout>


        <soup.neumorphism.NeumorphButton
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/dimen25"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:neumorph_backgroundColor="@color/button_bg_color"
            app:neumorph_shapeAppearance="@style/NeumophoCard"
            app:neumorph_shapeType="flat" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>